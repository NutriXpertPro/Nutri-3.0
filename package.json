{
  "name": "nutri-3.0",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:django": "python manage.py runserver 0.0.0.0:8000",
    "start:tailwind": "npx tailwindcss -i ./theme/static/src/input.css -o ./static/css/dist/styles.css --watch --config ./theme/tailwind.config.js",
    "dev": "npm-run-all --parallel start:django start:tailwind",
    "build": "npx tailwindcss -i ./theme/static/src/input.css -o ./static/css/dist/styles.css --minify --config ./theme/tailwind.config.js",
    "migrate": "python manage.py makemigrations && python manage.py migrate",
    "test": "python manage.py test"
  },
  "keywords": [],
  "author": "",
