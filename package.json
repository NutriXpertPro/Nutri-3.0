  "type": "commonjs",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "@tailwindcss/cli": "^4.1.14"
  }
}
