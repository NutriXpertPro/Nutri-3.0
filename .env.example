# Nutri Xpert Pro - Variáveis de Ambiente

# Configurações Django
SECRET_KEY='sua-chave-secreta-aqui'
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Banco de Dados MariaDB
DATABASE_URL=mysql+pymysql://nutri_user:nutri_password@localhost:3306/nutri_xpert_pro

# Senha do root do MariaDB (para setup inicial)
DB_ROOT_PASSWORD=sua-senha-root-aqui

# Configurações de Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-email

# Configurações de Mídia/Upload
MEDIA_ROOT=/caminho/para/media/
MEDIA_URL=/media/

# Configurações de Produção (opcional)
STATIC_ROOT=/caminho/para/static/
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# Configurações de Terceiros (opcional)
ASAAS_API_KEY=sua-api-key-asaas
AWS_ACCESS_KEY_ID=sua-aws-key
AWS_SECRET_ACCESS_KEY=sua-aws-secret
AWS_STORAGE_BUCKET_NAME=seu-bucket-s3